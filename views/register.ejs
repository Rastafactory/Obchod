<% include ./header.ejs %>

    <div class="container"><br>
        <h1>Registration Form</h1><br>
        <% if (typeof errors !== 'undefined'){errors.forEach(function(error){%>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>        
            <% })} %>
                <form method="post" enctype="multipart/form-data" action="/users/register">
                    <div class="form-group">
                        <label> First Name</label>
                        <input id="firstname" class="form-control" name="firstname" required="required" type="text" placeholder="Robert" />
                    </div>
                    <div class="form-group">
                        <label> Last Name</label>
                        <input id="lastname" class="form-control" name="lastname" required="required" type="text" placeholder="Robert" />
                    </div>
                    <div class="form-group">
                        <label> Your Username</label>
                        <input id="username" class="form-control" name="username" required="required" type="text" placeholder="mysuperusername690" />
                    </div>
                    <div class="form-group">
                        <label> Your Email</label>
                        <input id="email" class="form-control" name="email" required="required" type="email" placeholder="mysupermail@mail.com" />
                    </div>
                    <div class="form-group">
                        <label> Your Password</label>
                        <input id="password" class="form-control" name="password" required="required" type="password" placeholder="eg. X8df!90EO" />
                    </div>
                    <div class="form-group">
                        <label> Please Confirm Your Password</label>
                        <input id="password2" class="form-control" name="password2" required="required" type="password" placeholder="eg. X8df!90EO" />
                    </div>
                    <div class="form-group">
                        <label> Profile Image</label>
                        <input id="profileimage" class="form-control" name="profileimage" type="file" />
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox"> Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-lg">Submit</button>
                </form>
    </div>

</body>

</html>