<% include ./header.ejs %>

<!-- Page Content -->
<div class="container">

  <!-- Player Profile Heading -->
  <h1 class="my-4"><%=currentUser.username%>
    <small><%=currentUser.firstname%> <%=currentUser.lastname%></small>
  </h1>
  <div class="row">

    <!-- Player Profile info -->
    <div class="col-md-6 mb-4">
      <div class="card text-center">
        <img class="rounded img-fluid" src="/images/uploads/<%=currentUser.profileimage%>" alt="">
      </div>
      <% if(canUpload){ %>
      <form action="/users/uploadPhoto" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <input id="profileimage" name="profileimage" type="file" class="form-control">
        </div>
        <button type="submit" class="btn btn-outline-secondary">Upload Profile Image</button>
      </form>
      <% } %>
    </div>

    <div class="col-md-6 mb-4">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Games Played: <b><%=currentUser.summary.gamesplayed%></b></li>
        <li class="list-group-item">Wins: <b><%=currentUser.summary.wins%></b></li>
        <li class="list-group-item">Draws: <b><%=currentUser.summary.draws%></b></li>
        <li class="list-group-item">Losses: <b><%=currentUser.summary.losses%></b></li>
        <li class="list-group-item">Goals: <b><%=currentUser.summary.goals%></b></li>
        <li class="list-group-item">Assists: <b><%=currentUser.summary.assists%></b></li>
        <li class="list-group-item">Points: <b><%=currentUser.summary.points%></b></li>
      </ul>
    </div>
  </div></br>

  <!-- Player Form -->
  <h3 class="my-4">Player Form</h3>
  <div class="progress">
    <div class="progress-bar bg-success" role="progressbar"
      style="width: <%=(currentUser.summary.wins/currentUser.summary.gamesplayed)*100%>%"
      aria-valuenow="<%=(currentUser.summary.wins/currentUser.summary.gamesplayed)*100%>" aria-valuemin="0"
      aria-valuemax="100"></div>
  </div>

  <!-- Related Projects Row -->
  <h3 class="my-4">Last Games Played</h3>

  <div class="row">

    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
        <img class="img-fluid" src="http://placehold.it/500x300" alt="">
      </a>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
        <img class="img-fluid" src="http://placehold.it/500x300" alt="">
      </a>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
        <img class="img-fluid" src="http://placehold.it/500x300" alt="">
      </a>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
        <img class="img-fluid" src="http://placehold.it/500x300" alt="">
      </a>
    </div>

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->
</body>

