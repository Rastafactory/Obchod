			<section class="header_text sub">
			<img class="pageBanner" src="../themes/images/pageBanner.png" alt="New products" >
				<h4><span>Add or Delete Product</span></h4>
			</section>
			<section class="main-content">				
				<div class="row">						
					<div class="span9">
						<div class="row">
							<div class="span3">
                                <form method="post" enctype="multipart/form-data" action="/products/addProduct">
                                    <fieldset>
                                        <div class="form-group">
                                                <label> Product Name</label>
                                                <input id="productname" class="form-control" name="productname" required="required" type="text" />
                                            </div>
                                            <div class="form-group">
                                                <label> Product Code</label>
                                                <input id="productcode" class="form-control" name="productcode" type="text" />
                                            </div>
                                            <div class="form-group">
                                                <label> Availability</label>
                                                <input id="availability" class="form-control" name="availability" type="number" value="0" />
                                            </div>
                                            <div class="form-group">
                                                <label> Brand</label>
                                                <input id="brand" class="form-control" name="brand" type="text" />
                                            </div>
                                            <div class="form-group">
                                                <label> Category</label>
                                                <input id="category" class="form-control" name="category" type="text" />
                                            </div>
                                            <div class="form-group">
                                                <label> Subcategory</label>
                                                <input id="subcategory" class="form-control" name="subcategory" type="text" />
                                            </div>
                                            <div class="form-group">
                                                <label> Description</label>
                                                <input id="description" class="form-control" name="description" type="textarea" />
                                            </div>
                                            <div class="form-group">
                                                <label> Price</label>
                                                <input id="price" class="form-control" name="price" type="text" />
                                            </div>
                                            <div class="form-group">
                                                <label> Image</label>
                                                <input id="img" class="form-control" name="img" type="file" />
                                            </div>
                                        <hr>
                                        <div class="actions"><input tabindex="9" class="btn btn-inverse large" type="submit" value="Add new Product"></div>
                                    </fieldset>
                                </form>
							</div>
                            <div class="span6">
                                <table>
                                   <tr>
                                      <th>Product Name</th><th>Product Code</th><th>Price</th><th>Availability</th><th>Brand</th><th>category</th><th>subcategory</th>
                                   </tr>
                                    
                                   <% for (var i=0; i<products.length;i++) { %>
                                    <tr>
                                        <td><%=products[i].productname%></td>
                                        <td><%=products[i].productcode%></td>
                                        <td><%=products[i].price%></td>
                                        <td><%=products[i].availability%></td>
                                        <td><%=products[i].brand%></td>
                                        <td><%=products[i].category%></td>
                                        <td><%=products[i].subcategory%></td>
                                    </tr>    
                                   <% } %>
                                </table>
							</div>						
						</div>
					</div>
				</div>
